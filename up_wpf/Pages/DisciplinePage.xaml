            <TextBox Width="200" Margin="5"/>
            <TextBlock Margin="5">Кафедра</TextBlock>
            <TextBox Width="200" Margin="5"/>
            <Button HorizontalAlignment="Stretch" Margin="5">
                Сохранить
            </Button>
        </StackPanel>
    </Grid>
</Page>
