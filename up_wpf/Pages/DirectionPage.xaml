<Page x:Class="up_wpf.Pages.DirectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up_wpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DirectionPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="5">Код</TextBlock>
            <TextBox Width="200"  Name="CodeTB" Margin="5"/>
            <TextBlock Margin="5">Название</TextBlock>
            <TextBox Width="200"  Name="NameTB" Margin="5"/>
            <TextBlock Margin="5">Факультет</TextBlock>
            <TextBox Width="200"  Name="FacTB" Margin="5"/>
            <Button HorizontalAlignment="Stretch" Margin="5" Click="Button_Click">
                Сохранить
            </Button>
        </StackPanel>
    </Grid>
</Page>
